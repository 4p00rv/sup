// Reset Css
h1, div, span, a, body {
	text-decoration: none;
	margin: 0;
	padding: 0;
	list-style: none;
	border: none;
}
*:focus {
	outline: 0;
}
// end of reset css

$serif: "adobe-garamond-pro";
$sans-serif: "AvantGardeGothicITCW01D 731075","Helvetica Neue",Arial,Helvetica,sans-serif;
$gray: #e5e5e5;
$dark-gray: #aaa;
$purple: #6a0bc1;
$chevron-right: url(<%= asset_path 'chevron_right.png' %>);

@mixin clearfix {
	display: table;
	content: ".";
	clear: both;
}

@mixin sans-serif {
	font-family: $sans-serif;
	font-weight: 500;
	letter-spacing: 2px;
}

body {
	width: 900px;
	padding: 40px 0px;
	margin: auto;

	h1#logo {
		font-family: $serif;
		span#app-name {
			font-family: $sans-serif;
			font-size: 40px;
		}
		padding-bottom: 20px;
		font-size: 27px;
	}

	h2.edit-title {
		font-size: 18px;
		font-weight: 100;
		margin: 10px;
	}

	div.black-button {
		a, input {
			width: 100%;
			padding: 15px 0px;
			display: block;
			background-color: black;
			color: white;
			text-align: center;
			text-transform: uppercase;
			@include sans-serif;
			border: 2px solid black;
			margin: 10px 0;
		}

		a:hover, input:hover {
			background-color: $purple;
			color: white;
			border: 2px solid black;
		}
	}

	div.white-button {
		a, input {
			width: 100%;
			padding: 15px 0px;
			display: block;
			background-color: white;
			color: black;
			text-align: center;
			text-transform: uppercase;
			@include sans-serif;
			border: 2px solid black;
			margin: 10px 0;
		}

		a:hover, input:hover {
			background-color: $purple;
			color: white;
			border: 2px solid black;
		}
	}

	.input-box-container {
		padding: 10px;
		border-top: solid 1px $gray;
		font-size: 15px;
		.input-box {
			label {
				padding-right: 10px;
				font-weight: 600;
			}
			input {
				border: solid 1px $gray;
				padding: 5px 10px;
				font-family: $serif;
				font-weight: 100;
				font-size: 15px;
			}
		}
	}

	.check-box-container {
		padding: 10px;
		border-top: solid 1px $gray;
		border-bottom: solid 1px $gray;
		margin-bottom: 10px;
		.check-box {
			margin: 5px 0px;
			label {
				letter-spacing: 1px;
				font-size: 16px;
			}
		}
	}

	table {
		margin-top: 20px;
		width: 100%;
		tr.member-list-item:hover {
			background-color: $gray;
		}
		tr.member-list-item {
			width: 98%;
			display: block;
			border-top: 2px solid $gray;
			padding: 10px;
			@include clearfix;
			font-weight: 600;


			td.edit-arrow > a {
				float: right;
				width: 12px;
				height: 18px;
				background-image: $chevron-right;
			}
		}
	}
}