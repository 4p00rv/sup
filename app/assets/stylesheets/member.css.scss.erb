// Reset Css
h1, div, span, a, body, li, ul {
	text-decoration: none;
	margin: 0;
	padding: 0;
	list-style: none;
	border: none;
}
a:visited {
	color: black;
}
*:focus {
	outline: 0;
}
// end of reset css

$serif: "adobe-garamond-pro";
$sans-serif: "AvantGardeGothicITCW01D 731075","Helvetica Neue",Arial,Helvetica,sans-serif;
$gray: #e5e5e5;
$dark-gray: #aaa;
$purple: #6a0bc1;
$chevron-right: url(<%= asset_path 'chevron_right.png' %>);

@mixin clearfix {
	display: table;
	content: ".";
	clear: both;
}

@mixin sans-serif {
	font-family: $sans-serif;
	font-weight: 500;
	letter-spacing: 2px;
}

body {
	width: 900px;
	padding: 40px 0px;
	margin: auto;

	div#error_explanation {
		margin-left: 10px;
		ul.error-list {
			margin-bottom: 25px;
			color: $purple;
		}
	}

	h1#logo {
		font-family: $serif;
		span#app-name {
			font-family: $sans-serif;
			font-size: 40px;
		}
		padding-bottom: 20px;
		font-size: 27px;
	}

	h2.edit-title {
		font-size: 18px;
		font-weight: 100;
		margin: 10px;
	}

	div.black-button {
		a, input {
			width: 100%;
			padding: 15px 0px;
			display: block;
			background-color: black;
			color: white;
			text-align: center;
			text-transform: uppercase;
			@include sans-serif;
			border: 2px solid black;
			margin: 10px 0;
			cursor: pointer;
		}

		a:hover, input:hover {
			background-color: $purple;
			color: white;
			border: 2px solid black;
		}
	}

	div.white-button {
		a, input {
			width: 100%;
			padding: 15px 0px;
			display: block;
			background-color: white;
			color: black;
			text-align: center;
			text-transform: uppercase;
			@include sans-serif;
			border: 2px solid black;
			margin: 10px 0;
		}

		a:hover, input:hover {
			background-color: $purple;
			color: white;
			border: 2px solid black;
		}
	}

	.input-box-container {
		padding: 10px;
		border-top: solid 1px $gray;
		font-size: 15px;
		.input-box {
			label {
				padding-right: 10px;
				font-weight: 600;
			}
			input {
				border: solid 1px $gray;
				padding: 5px 10px;
				font-family: $serif;
				font-weight: 100;
				font-size: 15px;
			}
		}
	}

	.check-box-container {
		padding: 10px;
		border-top: solid 1px $gray;
		border-bottom: solid 1px $gray;
		margin-bottom: 10px;
		.check-box {
			margin: 5px 0px;
			label {
				letter-spacing: 1px;
				font-size: 16px;
			}
			label:hover {
				color: $purple;
			}
		}
	}
}

.member-list {
  margin-top: 20px;
  width: 100%;
  .member-list-item {
    color: black;
    width: 98%;
    display: block;
    border-top: 2px solid $gray;
    padding: 10px;
    @include clearfix;
    font-weight: 600;
    &:last-child {
      border-bottom: 2px solid $gray;
    }
    &:hover {
      background-color: $gray;
    }
    &:after {
      content: '';
      float: right;
      width: 12px;
      height: 18px;
      background-image: $chevron-right;
    }
  }
}

#comment-form {
	font-family: $serif;
	h2, h3 {
		text-align: center;
	}
	h3 {
		font-weight: lighter;
	}
	textarea {
		width: 97%;
		height: 90px;
		border: 3px solid $gray;
		padding: 10px;
		font-size: 17px;
		font-family: $serif;
	}
}
