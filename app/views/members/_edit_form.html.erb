<form action="<%= members_url %>" method="post">
  <label>Name</label>
  <input type="text" name="member[name]" value="<%= member.name %>">
  <label>Email</label>
  <input type="text" name="member[email]" value="<%= member.email %>">

  <% Group.all.each do |group| %>
    <label>
      <input
        type="checkbox"
        name="member[group_ids][]"
        value="<%= group.id %>"
        <%= member.groups.include?(group.id) ? 'checked="checked"' : '' %>>
      <%= group.name %>
    </label>
  <% end %>

  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input type="submit" value="Save">
</form>
